{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "./build/",
    "module": "commonjs",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true //Mongoose 9.2.0 gives strange type-error. I have to skip it.
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/scripts/**/*.ts", "node_modules"]
}
